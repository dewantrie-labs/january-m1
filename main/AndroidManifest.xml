<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andre.trainingm1.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.andre.trainingm1.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.andre.trainingm1.app.MenuUtama"
            android:label="@string/title_activity_menu_utama">
        </activity>
        <activity
            android:name="com.andre.trainingm1.app.Detail"
            android:label="@string/title_activity_detail" >
        </activity>
        <activity
            android:name="com.andre.trainingm1.app.ViewNewsImage"
            android:label="@string/title_activity_view_news_image"
            android:parentActivityName="com.andre.trainingm1.app.MenuUtama" >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".MainActivity" />
        </activity>
    </application>

</manifest>
